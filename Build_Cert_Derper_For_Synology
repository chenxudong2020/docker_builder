FROM golang:latest AS builder

LABEL org.opencontainers.image.source https://github.com/yangchuansheng/ip_derper

WORKDIR /app

ADD tailscale /app/tailscale

# build modified derper
RUN cd /app/tailscale/cmd/derper && \
    /usr/local/go/bin/go build -buildvcs=false -ldflags "-s -w" -o /app/derper && \
    cd /app && \
    rm -rf /app/tailscale



FROM golang:1.19.5-alpine3.16

RUN sed -i 's/dl-cdn.alpinelinux.org/mirrors.tuna.tsinghua.edu.cn/g' /etc/apk/repositories

RUN apk update && \
    apk add --no-cache bash openssl curl && \
    rm -rf /var/cache/apk/*


WORKDIR /app

# ========= CONFIG =========
# - derper args
ENV DERP_ADDR :18889
ENV DERP_HTTP_PORT -1
ENV DERP_HOST your-hostname.com
ENV DERP_CERTS=/app/certs/
ENV DERP_STUN true
ENV DERP_VERIFY_CLIENTS false
ENV PATH="/app:${PATH}"
# ==========================



COPY --from=builder /app/derper .

RUN chmod +x *

CMD ["/app/derper", "--hostname=$DERP_HOST \
    --certmode=manual \
    --certdir=$DERP_CERTS \
    --stun=$DERP_STUN  \
    --a=$DERP_ADDR \
    --http-port=$DERP_HTTP_PORT \
    --verify-clients=$DERP_VERIFY_CLIENTS"]
